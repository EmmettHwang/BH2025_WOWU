        // ìŠ¤ì™€ì´í”„ ì´ë²¤íŠ¸ í•¸ë“¤ëŸ¬
        function initSwipe() {
            const container = document.getElementById('swipeContainer');
            
            document.addEventListener('touchstart', (e) => {
                touchStartX = e.changedTouches[0].screenX;
                touchStartY = e.changedTouches[0].screenY;
            }, { passive: true });
            
            document.addEventListener('touchend', (e) => {
                touchEndX = e.changedTouches[0].screenX;
                touchEndY = e.changedTouches[0].screenY;
                
                // ì„¸ë¡œ ìŠ¤í¬ë¡¤ì¸ì§€ ê°€ë¡œ ìŠ¤ì™€ì´í”„ì¸ì§€ íŒë‹¨
                const deltaX = Math.abs(touchEndX - touchStartX);
                const deltaY = Math.abs(touchEndY - touchStartY);
                
                // ê°€ë¡œ ì´ë™ì´ ì„¸ë¡œ ì´ë™ë³´ë‹¤ í¬ê³ , ìµœì†Œ ì´ë™ ê±°ë¦¬ë¥¼ ë§Œì¡±í•˜ë©´ ìŠ¤ì™€ì´í”„ë¡œ ì¸ì‹
                if (deltaX > deltaY && deltaX > 50) {
                    handleSwipe();
                }
            });
        }
        
        function handleSwipe() {
            const swipeDistance = touchEndX - touchStartX;
            
            if (swipeDistance > 50 && currentPage === 'menu') {
                // ìš°ì¸¡ìœ¼ë¡œ ìŠ¤ì™€ì´í”„ â†’ ëŒ€ì‹œë³´ë“œë¡œ
                switchPage('dashboard');
            } else if (swipeDistance < -50 && currentPage === 'dashboard') {
                // ì¢Œì¸¡ìœ¼ë¡œ ìŠ¤ì™€ì´í”„ â†’ ë©”ë‰´ë¡œ
                switchPage('menu');
                // íŒíŠ¸ ìˆ¨ê¸°ê¸°
                document.getElementById('swipeHint').style.display = 'none';
            }
        }
        
        function switchPage(page) {
            const container = document.getElementById('swipeContainer');
            const dot1 = document.getElementById('dot1');
            const dot2 = document.getElementById('dot2');
            
            if (page === 'menu') {
                container.classList.add('menu-active');
                dot1.classList.remove('active');
                dot2.classList.add('active');
                currentPage = 'menu';
            } else {
                container.classList.remove('menu-active');
                dot1.classList.add('active');
                dot2.classList.remove('active');
                currentPage = 'dashboard';
            }
        }
        
        // ëŒ€ì‹œë³´ë“œ ë°ì´í„° ë¡œë“œ
        async function loadDashboardData() {
            try {
                // í˜„ì¬ ë‚ ì§œ í‘œì‹œ
                const now = new Date();
                document.getElementById('currentDate').textContent = 
                    now.toLocaleDateString('ko-KR', { year: 'numeric', month: 'long', day: 'numeric', weekday: 'long' });
                
                // í†µê³„ ë°ì´í„° ë¡œë“œ
                const params = userType === 'instructor' 
                    ? `instructor_code=${currentUser.code}` 
                    : `student_id=${currentUser.id}`;
                
                // ë©”ëª¨ ê°œìˆ˜
                const memos = await axios.get(`${API_BASE_URL}/api/class-notes?${params}`);
                allActivitiesData.memos = memos.data || [];
                const memoThisWeek = getThisWeekCount(allActivitiesData.memos, 'note_date');
                document.getElementById('memoCount').textContent = allActivitiesData.memos.length;
                document.getElementById('memoThisWeek').textContent = `ì´ë²ˆ ì£¼: ${memoThisWeek}ê°œ`;
                
                // í›ˆë ¨ì¼ì§€ ê°œìˆ˜
                const training = await axios.get(`${API_BASE_URL}/api/training-logs?${params}`);
                allActivitiesData.training = training.data || [];
                const trainingThisWeek = getThisWeekCount(allActivitiesData.training, 'training_date');
                document.getElementById('trainingCount').textContent = allActivitiesData.training.length;
                document.getElementById('trainingThisWeek').textContent = `ì´ë²ˆ ì£¼: ${trainingThisWeek}ê°œ`;
                
                // ìƒë‹´ ê°œìˆ˜
                const counseling = await axios.get(`${API_BASE_URL}/api/counselings?${params}`);
                allActivitiesData.counseling = counseling.data || [];
                const counselingPending = allActivitiesData.counseling.filter(c => c.status === 'ì˜ˆì•½').length;
                document.getElementById('counselingCount').textContent = allActivitiesData.counseling.length;
                document.getElementById('counselingPending').textContent = `ëŒ€ê¸°ì¤‘: ${counselingPending}ê±´`;
                
                // íŒ€ í™œë™ ê°œìˆ˜
                const team = await axios.get(`${API_BASE_URL}/api/team-activity-logs?${params}`);
                allActivitiesData.team = team.data || [];
                const teamThisWeek = getThisWeekCount(allActivitiesData.team, 'activity_date');
                document.getElementById('teamCount').textContent = allActivitiesData.team.length;
                document.getElementById('teamThisWeek').textContent = `ì´ë²ˆ ì£¼: ${teamThisWeek}ê°œ`;
                
                // ì°¨íŠ¸ ë Œë”ë§
                renderWeeklyChart();
                renderDistributionChart();
                
                // ìµœê·¼ í™œë™ í‘œì‹œ
                displayRecentActivities('all');
                
            } catch (error) {
                console.error('Failed to load dashboard data:', error);
            }
        }
        
        // ì´ë²ˆ ì£¼ ë°ì´í„° ê°œìˆ˜ ê³„ì‚°
        function getThisWeekCount(data, dateField) {
            const now = new Date();
            const startOfWeek = new Date(now);
            startOfWeek.setDate(now.getDate() - now.getDay()); // ì¼ìš”ì¼
            startOfWeek.setHours(0, 0, 0, 0);
            
            return data.filter(item => {
                const itemDate = new Date(item[dateField]);
                return itemDate >= startOfWeek;
            }).length;
        }
        
        // ì£¼ê°„ í™œë™ ì°¨íŠ¸ ë Œë”ë§
        function renderWeeklyChart() {
            const ctx = document.getElementById('weeklyChart');
            
            // ìµœê·¼ 7ì¼ ë¼ë²¨
            const labels = [];
            const now = new Date();
            for (let i = 6; i >= 0; i--) {
                const date = new Date(now);
                date.setDate(now.getDate() - i);
                labels.push(date.toLocaleDateString('ko-KR', { month: 'short', day: 'numeric' }));
            }
            
            // ê° ë‚ ì§œë³„ ë°ì´í„° ì§‘ê³„
            const memoData = new Array(7).fill(0);
            const trainingData = new Array(7).fill(0);
            const counselingData = new Array(7).fill(0);
            const teamData = new Array(7).fill(0);
            
            // ë©”ëª¨ ë°ì´í„°
            allActivitiesData.memos.forEach(item => {
                const itemDate = new Date(item.note_date);
                const daysDiff = Math.floor((now - itemDate) / (1000 * 60 * 60 * 24));
                if (daysDiff >= 0 && daysDiff < 7) {
                    memoData[6 - daysDiff]++;
                }
            });
            
            // í›ˆë ¨ì¼ì§€ ë°ì´í„°
            allActivitiesData.training.forEach(item => {
                const itemDate = new Date(item.training_date);
                const daysDiff = Math.floor((now - itemDate) / (1000 * 60 * 60 * 24));
                if (daysDiff >= 0 && daysDiff < 7) {
                    trainingData[6 - daysDiff]++;
                }
            });
            
            // ìƒë‹´ ë°ì´í„°
            allActivitiesData.counseling.forEach(item => {
                const itemDate = new Date(item.consultation_date);
                const daysDiff = Math.floor((now - itemDate) / (1000 * 60 * 60 * 24));
                if (daysDiff >= 0 && daysDiff < 7) {
                    counselingData[6 - daysDiff]++;
                }
            });
            
            // íŒ€ í™œë™ ë°ì´í„°
            allActivitiesData.team.forEach(item => {
                const itemDate = new Date(item.activity_date);
                const daysDiff = Math.floor((now - itemDate) / (1000 * 60 * 60 * 24));
                if (daysDiff >= 0 && daysDiff < 7) {
                    teamData[6 - daysDiff]++;
                }
            });
            
            // ì°¨íŠ¸ ìƒì„±
            if (weeklyChart) weeklyChart.destroy();
            
            weeklyChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [
                        {
                            label: 'SSIRNë©”ëª¨',
                            data: memoData,
                            borderColor: 'rgb(59, 130, 246)',
                            backgroundColor: 'rgba(59, 130, 246, 0.1)',
                            tension: 0.3,
                            fill: true
                        },
                        {
                            label: 'í›ˆë ¨ì¼ì§€',
                            data: trainingData,
                            borderColor: 'rgb(34, 197, 94)',
                            backgroundColor: 'rgba(34, 197, 94, 0.1)',
                            tension: 0.3,
                            fill: true
                        },
                        {
                            label: 'ìƒë‹´',
                            data: counselingData,
                            borderColor: 'rgb(249, 115, 22)',
                            backgroundColor: 'rgba(249, 115, 22, 0.1)',
                            tension: 0.3,
                            fill: true
                        },
                        {
                            label: 'íŒ€ í™œë™',
                            data: teamData,
                            borderColor: 'rgb(168, 85, 247)',
                            backgroundColor: 'rgba(168, 85, 247, 0.1)',
                            tension: 0.3,
                            fill: true
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: {
                            display: true,
                            position: 'bottom',
                            labels: {
                                boxWidth: 12,
                                font: {
                                    size: 10
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                stepSize: 1
                            }
                        }
                    }
                }
            });
        }
        
        // í™œë™ ë¶„í¬ ì°¨íŠ¸ ë Œë”ë§
        function renderDistributionChart() {
            const ctx = document.getElementById('distributionChart');
            
            const data = [
                allActivitiesData.memos.length,
                allActivitiesData.training.length,
                allActivitiesData.counseling.length,
                allActivitiesData.team.length
            ];
            
            // ì°¨íŠ¸ ìƒì„±
            if (distributionChart) distributionChart.destroy();
            
            distributionChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['SSIRNë©”ëª¨', 'í›ˆë ¨ì¼ì§€', 'ìƒë‹´', 'íŒ€ í™œë™'],
                    datasets: [{
                        data: data,
                        backgroundColor: [
                            'rgba(59, 130, 246, 0.8)',
                            'rgba(34, 197, 94, 0.8)',
                            'rgba(249, 115, 22, 0.8)',
                            'rgba(168, 85, 247, 0.8)'
                        ],
                        borderWidth: 2,
                        borderColor: '#fff'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: {
                            display: true,
                            position: 'bottom',
                            labels: {
                                boxWidth: 12,
                                font: {
                                    size: 10
                                }
                            }
                        }
                    }
                }
            });
        }
        
        // ìµœê·¼ í™œë™ í‘œì‹œ
        function displayRecentActivities(filter = 'all') {
            const container = document.getElementById('recentActivities');
            
            let activities = [];
            
            // í•„í„°ë§ ì ìš©
            if (filter === 'all' || filter === 'memo') {
                activities = activities.concat(
                    (allActivitiesData.memos || []).map(m => ({
                        type: 'memo',
                        icon: 'fa-book-open',
                        color: 'text-blue-600',
                        bgColor: 'bg-blue-50',
                        title: 'SSIRNë©”ëª¨',
                        content: m.content?.substring(0, 40) || 'ë‚´ìš© ì—†ìŒ',
                        date: m.note_date
                    }))
                );
            }
            
            if (filter === 'all' || filter === 'training') {
                activities = activities.concat(
                    (allActivitiesData.training || []).map(t => ({
                        type: 'training',
                        icon: 'fa-clipboard-list',
                        color: 'text-green-600',
                        bgColor: 'bg-green-50',
                        title: 'í›ˆë ¨ì¼ì§€',
                        content: t.content?.substring(0, 40) || 'ë‚´ìš© ì—†ìŒ',
                        date: t.training_date
                    }))
                );
            }
            
            if (filter === 'all' || filter === 'counseling') {
                activities = activities.concat(
                    (allActivitiesData.counseling || []).map(c => ({
                        type: 'counseling',
                        icon: 'fa-comments',
                        color: 'text-orange-600',
                        bgColor: 'bg-orange-50',
                        title: 'ìƒë‹´',
                        content: c.consultation_content?.substring(0, 40) || 'ë‚´ìš© ì—†ìŒ',
                        date: c.consultation_date,
                        status: c.status
                    }))
                );
            }
            
            if (filter === 'all' || filter === 'team') {
                activities = activities.concat(
                    (allActivitiesData.team || []).map(t => ({
                        type: 'team',
                        icon: 'fa-users',
                        color: 'text-purple-600',
                        bgColor: 'bg-purple-50',
                        title: 'íŒ€ í™œë™',
                        content: t.activity_content?.substring(0, 40) || 'ë‚´ìš© ì—†ìŒ',
                        date: t.activity_date
                    }))
                );
            }
            
            // ë‚ ì§œìˆœ ì •ë ¬
            activities.sort((a, b) => new Date(b.date) - new Date(a.date));
            
            // ìƒìœ„ 10ê°œë§Œ
            const recentActivities = activities.slice(0, 10);
            
            if (recentActivities.length === 0) {
                container.innerHTML = '<p class="text-gray-500 text-center py-4">ìµœê·¼ í™œë™ì´ ì—†ìŠµë‹ˆë‹¤</p>';
                return;
            }
            
            container.innerHTML = recentActivities.map(activity => `
                <div class="flex items-start gap-3 p-4 ${activity.bgColor} rounded-xl">
                    <i class="fas ${activity.icon} ${activity.color} text-2xl mt-1"></i>
                    <div class="flex-1">
                        <div class="flex items-center justify-between mb-1">
                            <p class="text-sm font-bold text-gray-800">${activity.title}</p>
                            ${activity.status ? `<span class="text-xs px-2 py-1 rounded-full ${
                                activity.status === 'ì˜ˆì•½' ? 'bg-orange-200 text-orange-800' :
                                activity.status === 'ì™„ë£Œ' ? 'bg-green-200 text-green-800' :
                                'bg-gray-200 text-gray-800'
                            }">${activity.status}</span>` : ''}
                        </div>
                        <p class="text-xs text-gray-700 mb-2">${activity.content}</p>
                        <div class="flex items-center gap-2 text-xs text-gray-500">
                            <i class="fas fa-calendar-alt"></i>
                            <span>${new Date(activity.date).toLocaleDateString('ko-KR')}</span>
                            <span>${new Date(activity.date).toLocaleTimeString('ko-KR', { hour: '2-digit', minute: '2-digit' })}</span>
                        </div>
                    </div>
                </div>
            `).join('');
        }
        
        // í™œë™ í•„í„°ë§
        function filterActivities(filter) {
            // ë²„íŠ¼ ìŠ¤íƒ€ì¼ ì—…ë°ì´íŠ¸
            document.querySelectorAll('.activity-filter-btn').forEach(btn => {
                if (btn.dataset.filter === filter) {
                    btn.classList.remove('bg-gray-200', 'text-gray-700');
                    btn.classList.add('bg-blue-600', 'text-white');
                } else {
                    btn.classList.remove('bg-blue-600', 'text-white');
                    btn.classList.add('bg-gray-200', 'text-gray-700');
                }
            });
            
            // ë°ì´í„° í•„í„°ë§ ë° í‘œì‹œ
            displayRecentActivities(filter);
        }
        
        // í˜ì´ì§€ ì´ˆê¸°í™”
        async function initializePage() {
            const user = JSON.parse(sessionStorage.getItem('user'));
            const type = sessionStorage.getItem('user_type');
            
            // ë¡œê·¸ì¸ ì²´í¬
            if (!user || !type) {
                window.location.href = 'login.html';
                return;
            }
            
            currentUser = user;
            userType = type;
            
            // ì‚¬ìš©ì ì •ë³´ í‘œì‹œ
            const userName = user.name || 'ì‚¬ìš©ì';
            const userRole = userType === 'instructor' ? 'ê°•ì‚¬' : 'í•™ìƒ';
            
            document.getElementById('userInfo').textContent = `${userName} (${userRole})`;
            document.getElementById('welcomeName').textContent = `${userName}ë‹˜`;
            document.getElementById('welcomeMessage').textContent = 
                userType === 'instructor' ? 'ì˜¤ëŠ˜ë„ ì—´ì •ì ì¸ êµìœ¡ ë¶€íƒë“œë¦½ë‹ˆë‹¤' : 'ì˜¤ëŠ˜ë„ ì—´ì‹¬íˆ ê³µë¶€í•˜ì„¸ìš”';
            
            // ìŠ¤ì™€ì´í”„ ì´ˆê¸°í™”
            initSwipe();
            
            // ë©”ë‰´ ìƒì„±
            renderMenus(userType);
            
            // ëŒ€ì‹œë³´ë“œ ë°ì´í„° ë¡œë“œ
            await loadDashboardData();
        }
        
        // ë©”ë‰´ ë Œë”ë§
        function renderMenus(userType) {
            const menuGrid = document.getElementById('menuGrid');
            
            // ê³µí†µ ë©”ë‰´ + ê¶Œí•œë³„ ë©”ë‰´
            const menus = [
                ...MENUS.common,
                ...(userType === 'instructor' ? MENUS.instructor : MENUS.student)
            ];
            
            menuGrid.innerHTML = menus.map((menu, index) => `
                <div class="menu-card bg-white rounded-2xl shadow-lg overflow-hidden cursor-pointer fade-in"
                     style="animation-delay: ${index * 0.1}s"
                     onclick="navigateToPage('${menu.page}')">
                    <div class="bg-gradient-to-br ${menu.color} p-6 text-white">
                        <i class="fas ${menu.icon} text-5xl mb-3"></i>
                        <h3 class="text-xl font-bold">${menu.title}</h3>
                    </div>
                    <div class="p-4">
                        <p class="text-sm text-gray-600">${menu.description}</p>
                    </div>
                </div>
            `).join('');
        }
        
        // í˜ì´ì§€ ì´ë™
        function navigateToPage(page) {
            window.location.href = page;
        }
        
        // ë¡œê·¸ì•„ì›ƒ
        function logout() {
            if (confirm('ì •ë§ ë¡œê·¸ì•„ì›ƒ í•˜ì‹œê² ìŠµë‹ˆê¹Œ?')) {
                sessionStorage.clear();
                localStorage.removeItem('user');
                localStorage.removeItem('user_type');
                window.location.href = 'login.html';
            }
        }
        
        // í˜ì´ì§€ ë¡œë“œ ì‹œ ì´ˆê¸°í™”
        window.addEventListener('DOMContentLoaded', initializePage);
    </script>
</body>
</html>
